<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNoButtonAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AlertDialog bez tlačítek"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCancelButtonAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AlertDialog s tlačítkem ZAVŘÍT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnYesNoButtonsAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AlertDialog s tlačítky ANO a NE"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSingleChoiceListAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AlertDialog se seznamem položek"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnMultiChoiceListAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AlertDialog se seznamem položek"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>